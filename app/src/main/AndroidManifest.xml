        <activity
            android:name=".MainMenuActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ThankYouActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ScoreboardActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".game.GameActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ColorNurseryGameActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".ShapeNurseryGameActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".LetterKinderGameActivity"
            android:screenOrientation="landscape">
